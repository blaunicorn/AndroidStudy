<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpinnerDropdownActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下拉模式的列表框"
        android:textSize="17sp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/sp_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@+id/textView"
       tools:text="测试数据"

        tools:ignore="MissingConstraints"></Spinner>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="弹框模式的列表框"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/sp_dropdown"
        android:textSize="17sp"
        tools:ignore="MissingConstraints" />
    <Spinner
        android:id="@+id/sp_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
       tools:text="测试数据"

        tools:ignore="MissingConstraints"></Spinner>

</androidx.constraintlayout.widget.ConstraintLayout>