<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentWriteActivity">
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="姓名:"
        android:textSize="20sp"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints"></TextView>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="请输入姓名"
        android:layout_marginLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_name"
        android:background="@drawable/edittext_selector"
        tools:ignore="MissingConstraints"></EditText>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="年龄:"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints"></TextView>

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/et_age"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="请输入年龄"
        android:layout_marginLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        app:layout_constraintStart_toEndOf="@+id/tv_age"
        android:background="@drawable/edittext_selector"
        tools:ignore="MissingConstraints"></EditText>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_height"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="身高:"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_age"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints"></TextView>

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/et_height"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="请输入身高"
        android:layout_marginLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_age"
        app:layout_constraintStart_toEndOf="@+id/tv_age"
        android:background="@drawable/edittext_selector"
        tools:ignore="MissingConstraints"></EditText>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="体重:"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_height"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints"></TextView>

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/et_weight"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="请输入体重"
        android:layout_marginLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_height"
        app:layout_constraintStart_toEndOf="@+id/tv_age"
        android:background="@drawable/edittext_selector"
        tools:ignore="MissingConstraints"></EditText>
    <CheckBox
        android:id="@+id/ck_married"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已婚"
        app:layout_constraintTop_toBottomOf="@+id/tv_weight"
        app:layout_constraintStart_toStartOf="@+id/et_weight"
        tools:ignore="MissingConstraints"></CheckBox>

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="用户id"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toEndOf="@+id/ck_married"
        app:layout_constraintTop_toTopOf="@+id/ck_married"
        tools:ignore="MissingConstraints"></TextView>
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        app:layout_constraintTop_toBottomOf="@+id/ck_married"
        tools:ignore="MissingConstraints"></Button>
    <Button
        android:id="@+id/btn_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="读取"
        app:layout_constraintTop_toBottomOf="@+id/btn_save"
        tools:ignore="MissingConstraints"></Button>
    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改"
        app:layout_constraintTop_toBottomOf="@+id/btn_read"
        tools:ignore="MissingConstraints"></Button>
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除"
        app:layout_constraintTop_toBottomOf="@+id/btn_update"
        tools:ignore="MissingConstraints"></Button>
      <Button
        android:id="@+id/btn_query_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询所有"
        app:layout_constraintTop_toBottomOf="@+id/btn_update"
        tools:ignore="MissingConstraints"></Button>
    <Button
        android:id="@+id/btn_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="模糊查询(按姓名)"
        app:layout_constraintTop_toBottomOf="@+id/btn_query_all"
        tools:ignore="MissingConstraints"></Button>
    <TextView
        android:id="@+id/tv_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_query"

        tools:ignore="MissingConstraints"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>